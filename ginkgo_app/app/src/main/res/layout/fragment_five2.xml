<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/refresh"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/title_gongneng"
                android:layout_height="wrap_content"
                android:text="所有功能"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/gongnneg1"
                android:layout_below="@+id/title_gongneng"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView1"
                        android:src="@mipmap/xiangmu_lanse"
                        android:scaleType="centerInside"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                         />

                    <TextView
                        android:text="成员"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView2"
                        android:src="@mipmap/gengduo_lanse"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="报告"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView3"
                        android:src="@mipmap/wo_lanse"
                        android:scaleType="centerInside"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="统计"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView4"
                        android:src="@mipmap/tongzhi_lanse"
                        android:scaleType="centerInside"
                        android:layout_width="50dp"
                        android:padding="7dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="日历"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <!--第二部分-->
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/title_gongneng2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/gongnneg1"
                android:layout_height="wrap_content"
                android:text="所有功能"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/gongnneg21"
                android:layout_below="@+id/title_gongneng2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView21"
                        android:src="@mipmap/xiangmu_huise"
                        android:scaleType="centerInside"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                         />

                    <TextView
                        android:text="成员"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView22"
                        android:src="@mipmap/gengduo_huise"
                        android:scaleType="centerInside"
                        android:padding="10dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="报告"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView23"
                        android:src="@mipmap/wo_huise"
                        android:scaleType="centerInside"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="统计"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"

                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/MyImageView24"
                        android:src="@mipmap/tongzhi_huise"
                        android:scaleType="centerInside"
                        android:layout_width="50dp"
                        android:padding="7dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="日历"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>




    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>