<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_pwd_view"
    android:orientation="vertical"
    tools:context="com.qk.activity.Forget_ChangePasswordActivity"
    >

    <include layout="@layout/top" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
        <View
            android:background="#d3d3d3"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="请输入您的注册手机号"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/get_phone"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:paddingLeft="13dp"
                android:layout_marginTop="11dp"
                android:digits="0123456789"
                android:background="@drawable/cehuatbottm_white"
                android:hint="请输入您的注册手机号"
                android:textSize="16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="13dp"
                android:background="#d3d3d3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="验证码"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingRight="20dp">
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="31dp"
                    android:paddingLeft="13dp"
                    android:id="@+id/checkcode_text"
                    android:layout_marginTop="11dp"
                    android:inputType=""
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:background="@drawable/cehuatbottm_white"
                    android:hint="请输入验证码"
                    android:textSize="16sp" />
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:id="@+id/checkcode_btn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:layout_marginTop="11dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="获取验证码"
                    app:qmui_radiusBottomRight="8dp"
                    app:qmui_radiusBottomLeft="8dp"
                    app:qmui_radiusTopRight="8dp"
                    app:qmui_radiusTopLeft="8dp"
                    android:textColor="@color/qmui_s_link_color"
                    app:qmui_borderColor="@color/qmui_s_link_color"
                    app:qmui_borderWidth="1px"
                    app:qmui_isRadiusAdjustBounds="true"
                    app:qmui_radius="10dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="#d3d3d3" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:padding="5dp"
                android:text="提 交"
                android:background="@color/app_color_theme_6"
                android:textColor="@color/text_white"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="取 消"
                android:background="@color/qianhui"
                android:textColor="@color/wyRed"
                android:textSize="16sp" />

        </LinearLayout>




        <ProgressBar
            android:id="@+id/progress_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="10dp"/>
    </LinearLayout>


</LinearLayout>
