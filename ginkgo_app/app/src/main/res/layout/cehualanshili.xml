<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/r1"
                android:background="@mipmap/st"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:text="九点半睡不着"
                    android:textSize="18sp"
                    android:id="@+id/text1"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <!--<TextView-->
                <!--android:id="@+id/img1"-->
                <!--android:layout_toRightOf="@id/text1"-->
                <!--android:drawableLeft="@mipmap/i6"-->
                <!--android:background="@drawable/cehuatextbackground"-->
                <!--android:text="6"-->
                <!--android:textColor="@android:color/darker_gray"-->
                <!--android:textSize="18sp"-->
                <!--android:layout_alignTop="@+id/text1"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
                <TextView
                    android:id="@+id/img2"
                    android:padding="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/qiandao2"
                    android:text="签到"

                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:layout_alignBottom="@+id/text1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/r1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/aj6"
                        android:id="@+id/xiaoimg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@+id/xiaoimg1"
                        android:text="我的消息"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/aje"
                        android:id="@+id/xiaoimg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_toRightOf="@+id/xiaoimg2"
                        android:text="会员中心"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <FrameLayout
        android:layout_alignParentBottom="true"

        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/saomiao"
                android:layout_marginLeft="20dp"
                android:id="@+id/saomiao"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/shezhi"
                android:layout_toRightOf="@+id/saomiao"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/shezhi"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/logout"
                android:text="退出"
                android:gravity="center"
                android:textColor="@color/text_orange"
                android:layout_toRightOf="@+id/saomiao"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:layout_width="53dp"
                android:layout_height="52dp" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>