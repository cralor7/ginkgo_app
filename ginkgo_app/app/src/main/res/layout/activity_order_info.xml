<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qk.activity.xsgl.OrderInfoActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <View
        android:background="#d3d3d3"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="订单号:"
            android:id="@+id/order_ddh1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_ddh"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="经销商代码:"
            android:id="@+id/order_jxscode1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_jxscode"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="业务模式:"
            android:id="@+id/order_jywms1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_ywms"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="订单类别:"
            android:id="@+id/order_ddlb1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_ddlb"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="成车车型号:"
            android:id="@+id/order_cccxh1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_cccxh"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="颜色:"
            android:id="@+id/order_ys1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_ys"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="数量:"
            android:id="@+id/order_sl1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_sl"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="定单价:"
            android:id="@+id/order_dpprice1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_dpprice"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d3d3d3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="单据状态:"
            android:id="@+id/order_djzt1"
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text=""
            android:id="@+id/order_djzt"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/order_agree"
            android:layout_width="wrap_content"
            android:text="同意"
            android:textColor="@color/withe"
            android:background="@drawable/elistview_item_bg"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/order_reject"
            android:text="驳回"
            android:layout_marginLeft="50dp"
            android:background="@drawable/order_reject_btn"
            android:layout_width="wrap_content"
            android:textColor="@color/wyRed"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
</ScrollView>