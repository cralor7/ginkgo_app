<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="?attr/appbg"
    tools:context="com.qk.activity.MainActivity">
  <RelativeLayout
      android:padding="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/usernmae_text"
          android:layout_centerInParent="true"
          android:text="冯业宗"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <ImageView
          android:id="@+id/main_set_img"
          android:src="@mipmap/shezhi"
          android:layout_alignParentRight="true"
          android:layout_width="25dp"
          android:layout_marginRight="10dp"
          android:layout_height="25dp" />
  </RelativeLayout>
    <!--第一部分 头像姓名部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel1"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <com.qk.util.CircleImageView
            android:layout_centerHorizontal="true"
            android:src="@mipmap/yinshi2"
            android:id="@+id/name_left_img"
            android:layout_width="70dp"
            android:layout_height="70dp" />
            <TextView
                android:id="@+id/gongsi"
                android:layout_below="@+id/name_left_img"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:text="归属公司:济南重汽"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/gongsi"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/bumen"
            android:text="归属部门:轻卡销售部"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/right_btn"
                android:layout_width="20dp"
                android:layout_height="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="是否开启推送"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/set_switch"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
